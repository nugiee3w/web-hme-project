# Environment variables for Railway.app deployment
APP_NAME="HME Poliban"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=$RAILWAY_STATIC_URL

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Railway provides PostgreSQL by default
DB_CONNECTION=pgsql
DB_HOST=$PGHOST
DB_PORT=$PGPORT
DB_DATABASE=$PGDATABASE
DB_USERNAME=$PGUSER
DB_PASSWORD=$PGPASSWORD

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# For static files
ASSET_URL=$RAILWAY_STATIC_URL

# Additional Railway optimizations
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false
